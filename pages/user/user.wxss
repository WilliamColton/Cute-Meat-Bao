/* pages/user/user.wxss */
.bottom-page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
}

.bottom-login{
  display:flex;
  flex-direction: column;
  align-items: center;
}

.bottom-avatar {
  margin-bottom: 100rpx;
  border: #cfcfcf solid 8rpx;
  border-radius: 30rpx;
  background-color: #F4F4F6;
  width: 184px;
  height: 184px;
}

.name{
  width: 300rpx;
  height: 40rpx;
  font-size: 40rpx;
  text-align: center;
}

.upper-page{
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
}

.upper-avatar-wrapper {
  padding: 0;
  margin-top: 50rpx;
  margin-bottom: 30rpx;
  border: #cfcfcf solid 8rpx;
  border-radius: 30rpx;
  background-color: #F4F4F6;
  width: 186px;
  height: 186px;
}

.upper-avatar{
  width: 186px;
  height: 186px;
}

.upper-name-input {
  width: 300rpx;
  text-align: center;
  margin-bottom: 30rpx;
  font-size: 40rpx;
  height: 40rpx;
}

.upper-button{
  margin-bottom: 30rpx;
}